    { "trigger": "onResearchComplete", "action": [{ "type": "unlockBlueprint", "params": { "blueprintId": "{research.unlocked}" } }, { "type": "recordMetric", "params": { "metric": "researchCompleted" } }] },
    { "trigger": "onFactionDiplomacyChange", "action": [{ "type": "notifyUI", "params": { "message": "{faction.name} changed stance to {faction.stance}" } }, { "type": "recordMetric", "params": { "metric": "factionRelations" } }] }
