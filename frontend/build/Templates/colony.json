    { "id": "engineer", "skills": { "construction": 4, "research": 2, "repair": 3 } },
    { "id": "biologist", "skills": { "research": 4, "medicine": 3, "farming": 2 } },
    { "id": "miner", "skills": { "mining": 5, "repair": 2 } }
  ],
  "researchTree": {
    "nodes": [
      { "id": "r_power_storage", "name": "Power Storage", "cost": 150, "effects": { "base.powerStorage": 100 } },
      { "id": "r_o2_recycler", "name": "Oxygen Recycler", "cost": 200, "effects": { "base.oxygenEfficiency": 0.2 } }
